variable "db_hostname" {
  description = "Database host for Wordpress"
  default     = "db"
}

variable "db_name" {
  description = "Database name for Wordpress"
  default     = "wordpress"
}

variable "db_usr" {
  description = "Database user for Wordpress"
  default     = "wordpress"
}

variable "db_passwd" {
  description = "Database password for Wordpress"
  default     = "password"
}